	<div id="item_form" class="row">
	<%= form_for :taskitem, :url=>{:controller=>"taskitems", :action=>"create"}, :remote=>true, :method=>:post, :html=>{:role=>"form"} do |item|%>
		<table class="table table-hover">
			<thead>
			<tr>
				<th><%= item.label "Title", :class=>"control-label" %></th>
				<th><%= item.label "Description", :class=>"control-label" %></th>
				<th><%= item.label "Due Date", :class=>"control-label" %></th>
				<th></th>
			</tr>
			</thead>
			<tbody>
			<tr>
				<td><%= item.text_field :title, :class=>"form-control"%></td>
				<td><%= item.text_field :description, :class=>"form-control"%></td>
				<td><%= item.datetime_select(:duedate, prompt: true, :class=>"form-control")%></td>
				<td><%= hidden_field_tag("list_id", list.id) %>
					<%= submit_tag("Add", :class=>"btn btn-primary") %></td>
			</tr>
			</tbody>
		</table>
	<% end %>
	</div>
	
	<div class="row">
	<% if taskitems %>
   		<table id="newtaskitems" class="table table-condensed table-hover table-striped table-bordered">
		<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Due Date</th>
			<th>Edit/Delete/Volunteer?</th>
		</tr>
		</thead>
		<% taskitems.each do |it| %>
			<tr id="taskitem_<%=it.id%>">
				<%= render :partial=>"/taskitems/taskitem", :locals=>{:item=>it} %>
			</tr>
		<% end %>
		</table>
	<% end %>
	</div>
