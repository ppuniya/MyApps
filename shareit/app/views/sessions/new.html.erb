<% if current_user %>
<%= render :partial=>"navviews/universalnav", :locals=>{navstat: "li"}%>
<% else %>
<%= render :partial=>"navviews/universalnav", :locals=>{navstat: "nli"}%>
<% end %>

<div class="page-header">
<h1>Log in</h1>
</div>

<%= form_tag sessions_path, :html=>{:class=>"form-horizontal", :role=>"form"} do %>	

	<div class="form-group row">
		<%= label_tag :email, nil, class: 'col-sm-2 control-label' %>
		<div class="col-sm-6">
			<%= text_field_tag :email, params[:email], class: 'form-control' %>
		</div>
	</div>
	<div class="form-group row">
		<%= label_tag :password, nil, class: 'col-sm-2 control-label' %>
		<div class="col-sm-6">
			<%= password_field_tag :password, nil, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-offset-2 col-sm-10">
			<%= submit_tag "Submit", class: 'btn btn-default'%>
		</div>
	</div>
<% end %>
