	<%= link_to ('<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>').html_safe, {:controller=>"shoppingitems", :action=>"destroy", :id=>item.id}, :remote=>true, :method=>:delete, data: {:confirm=>"Are you sure you want to delete this item?"}%></td>
